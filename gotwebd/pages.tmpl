	{{ " | " }}
	<a href="{{ render gotweb_render_url(tp->tp_arg, &tree_url) }}">tree</a>
      </div>
    </div>
    <div class="dotted_line"></div>
  {{ end }}
  {{ render gotweb_render_more(tp, BRIEFS) }}
</div>
